<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    app:cardBackgroundColor="@color/colorMainActivityCardBackground"
    app:contentPadding="8dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView_all"
                android:text="all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="@dimen/card_item_padding_small"

                android:layout_alignParentEnd="true" />

            <TextView
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_splash"
                android:padding="@dimen/card_item_padding_small"

                android:layout_toStartOf="@id/textView_all"/>

            <TextView
                android:text="unpack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_unpack"
                android:padding="@dimen/card_item_padding_small"
                android:textColor="@color/colorMainCardUnpackedCount"

                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/textView_splash" />

            <TextView
                android:id="@+id/item_title_tv"
                android:text="Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMainCardTitle"
                android:textSize="20sp"
                android:textStyle="bold"

                android:padding="@dimen/card_item_padding_default"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/textView_unpack" />

        </RelativeLayout>

        <TextView
            android:id="@+id/item_content_tv"
            android:textColor="#545454"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="content......"
            android:padding="@dimen/card_item_padding_default" />

    </LinearLayout>

</android.support.v7.widget.CardView>

